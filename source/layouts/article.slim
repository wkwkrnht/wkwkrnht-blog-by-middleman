= wrap_layout :layout
    = javascript_include_tag 'highlight.pack', defer: true, onload: 'hljs.initHighlightingOnLoad();'
    = javascript_include_tag 'fontawesome.min', defer: true, 'data-search-pseudo-elements': 'true'
    main.article-main
        = image_tag current_article.data.eyecatch || '/images/no-img.png', :alt=>'eyecatch', :class=>'article-eyecatch'
        = yield
        footer.article-footer
            - if current_article.tags.present?
                ul.tag-cloud
                    - current_article.tags.each do |tag|
                        li
                            == link_to tag, tag_path(tag)
            = partial 'partials/share-button'
    section class='big-card related-articles'
        h2
            | 最新記事
        ul.card-list
            - blog.articles[0...3].each do |article|
                li
                    = link_to article.url, :class=>'mini-card', :title=>article.title, :tabindex=>'0' do
                        = image_tag '/images/no-img.png', :alt=>'eyecatch', :class=>'card-img'
                        time.card-date
                            = article.date.strftime('%Y-%m-%d')
                        h3.card-title
                            == article.title