- site_title = data.front.title || 'NO NAME'
- title = current_page.data.title || site_title
- description = current_page.data.description || data.front.description
- base_url = data.front.baseurl || 'https://example.com'
- image = current_page.data.image || 'default.png'
- image_url = base_url + image_path(image)
- logo = data.front.logo || 'logo.png'
- theme_color = data.front.theme_color || '#ffcc00'

meta charset='utf-8'
